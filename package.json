{
  "name": "minato",
  "version": "0.0.1",
  "scripts": {
    "riot:watch": "riot -w src/tag/ src/tag/",
    "riot:build": "riot src/tag/ src/tag/",
    "start": "webpack && browser-sync start --config bs-config.js & webpack --watch",
    "build": "npm run riot:build && webpack --display-error-details",
    "deploy": "npm run riot:build && webpack -p --config webpack.production.js",
    "watch": "webpack --watch -d & npm run riot:watch",
    "postinstall": "bower install",
    "lint:setup": "eslint --init",
    "lint": "eslint src/scripts",
    "test": "mocha -w --compilers js:babel-register test/**/*.test.js"
  },
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "brace": "^0.8.0",
    "diff": "^3.0.1",
    "firebase": "^3.5.1",
    "font-awesome": "^4.6.3",
    "highlight.js": "^9.7.0",
    "immutable": "^3.8.1",
    "marked": "^0.3.6",
    "moment": "^2.15.1",
    "monaco-editor": "^0.7.0",
    "mousetrap": "^1.6.0",
    "riot": "^2.6.7",
    "riotcontrol": "0.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2015-riot": "^1.1.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.11.6",
    "bower-webpack-plugin": "^0.1.9",
    "browser-sync": "^2.16.0",
    "copy-webpack-plugin": "^4.0.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.5.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.3",
    "mocha": "^3.0.2",
    "node-sass": "^3.11.3",
    "power-assert": "^1.4.1",
    "sass-loader": "^4.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2"
  }
}
